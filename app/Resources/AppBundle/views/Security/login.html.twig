<!DOCTYPE html>
<html lang="en" class="full-height">

    <head>
        <!-- Required meta tags always come first -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>CapistranoUI by HCS</title>

        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <!-- Bootstrap -->
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <!-- Material Design for Bootstrap -->
        <link href="{{ asset('css/mdb.min.css') }}" rel="stylesheet">
        <link href="{{ asset('build/security/login.css') }}" rel="stylesheet">
    </head>

    <body>
        <!--Intro Section-->
        <section class="hm-stylish-strong">
            <div class="flex-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-6 col-md-10 col-sm-12 mx-auto mt-lg-5">

                            <!--Form with header-->
                            <div class="card">
                                <div class="card-body">

                                    <!--Header-->
                                    <div class="form-header default-color">
                                        <h3><i class="fa fa-lock"></i> Capistrano UI</h3>
                                    </div>

                                    <!--Body-->
                                    <form action="{{ path('login') }}" method="post">
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}
                                        <div class="md-form">
                                            <i class="fa fa-user prefix grey-text"></i>
                                            <input type="text" id="username" name="_username" class="form-control">
                                            <label for="username">Username</label>
                                        </div>
                                        <div class="md-form">
                                            <i class="fa fa-lock prefix grey-text"></i>
                                            <input type="password" id="password" name="_password" class="form-control">
                                            <label for="password">Password</label>
                                        </div>

                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

                                        <div class="text-center">
                                            <button class="btn default-color btn-lg">Login</button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                            <!--/Form with header-->

                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SCRIPTS -->
        <!-- jQuery -->
        <script type="text/javascript" src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
        <!-- Popper -->
        <script type="text/javascript" src="{{ asset('js/popper.min.js') }}"></script>
        <!-- Bootstrap -->
        <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
        <!-- MDB -->
        <script type="text/javascript" src="{{ asset('js/mdb.min.js') }}"></script>
    </body>
</html>
