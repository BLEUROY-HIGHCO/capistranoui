{% extends 'AppBundle::base.html.twig' %}
{% block breadcrumb %}Dashboard{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col-sm-12">
                <div class="card mb-r">
                    <div class="card-header white-text"><i class="fa fa-calendar-o"></i> Last deployment</div>
                    <div class="card-body">
                        <div class="table-responsive pre-scrollable">
                            <table class="table table-striped table-hover table-condensed">
                                <thead>
                                    <tr>
                                        <th>Project</th>
                                        <th>Environment</th>
                                        <th>Version</th>
                                        <th>User</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for version in versions %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('project_show', {'id': version.environment.project.id}) }}">{{ version.environment.project.name }}</a>
                                            </td>
                                            <td>
                                                <a href="{{ path('environment_show', {'id': version.environment.id}) }}">{{ version.environment.name }}</a>
                                            </td>
                                            <td>
                                                {{ version.number }}
                                            </td>
                                            <td>
                                                {{ version.deployedBy }}
                                            </td>
                                            <td class="hour">
                                                {{ version.deployedAt | localizeddate('medium', 'short', null, null, 'd MMM, HH:mm') }}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
